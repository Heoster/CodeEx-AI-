rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isValidImageSize() {
      return request.resource.size < 20 * 1024 * 1024; // 20MB
    }
    
    function isValidFileSize() {
      return request.resource.size < 20 * 1024 * 1024; // 20MB
    }
    
    function isImage() {
      return request.resource.contentType.matches('image/.*');
    }
    
    function isPDF() {
      return request.resource.contentType == 'application/pdf';
    }
    
    function isVideo() {
      return request.resource.contentType.matches('video/.*');
    }
    
    function isAudio() {
      return request.resource.contentType.matches('audio/.*');
    }

    // User profile images
    match /users/{userId}/profile/{fileName} {
      allow read: if true; // Public read
      allow write: if isOwner(userId) 
        && isValidImageSize() 
        && isImage();
    }

    // User uploaded files (PDFs for analysis)
    match /users/{userId}/uploads/{fileName} {
      allow read: if isOwner(userId);
      allow write: if isOwner(userId) 
        && isValidFileSize() 
        && (isImage() || isPDF());
      allow delete: if isOwner(userId);
    }
    
    // SOHAM: User uploaded images (camera/file picker)
    match /user-image/{userId}/{fileName} {
      allow read: if isOwner(userId);
      allow write: if isOwner(userId) 
        && isValidImageSize() 
        && isImage();
      allow delete: if isOwner(userId);
    }
    
    // SOHAM: Generated images (from AI)
    match /generated-image/{userId}/{fileName} {
      allow read: if isOwner(userId);
      allow write: if isOwner(userId) 
        && isValidImageSize() 
        && isImage();
      allow delete: if isOwner(userId);
    }
    
    // SOHAM: Generated videos (from AI)
    match /generated-video/{userId}/{fileName} {
      allow read: if isOwner(userId);
      allow write: if isOwner(userId) 
        && isValidFileSize() 
        && isVideo();
      allow delete: if isOwner(userId);
    }
    
    // SOHAM: Audio files (recordings, TTS)
    match /audio/{userId}/{fileName} {
      allow read: if isOwner(userId);
      allow write: if isOwner(userId) 
        && isValidFileSize() 
        && isAudio();
      allow delete: if isOwner(userId);
    }

    // Deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
